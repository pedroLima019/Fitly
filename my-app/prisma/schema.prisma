// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  userType      String?   // "personal" ou "student"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  // Relacionamentos
  trainings        Training[]
  requestsSent     ClientRequest[] @relation("StudentRequests")
  requestsReceived ClientRequest[] @relation("PersonalRequests")
  students         PersonalStudent[] @relation("PersonalToStudents")
  personals        PersonalStudent[] @relation("StudentToPersonals")
}

model Training {
  id        String   @id @default(cuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises Exercise[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id        String   @id @default(cuid())
  name      String
  sets      Int
  reps      Int
  weight    Float?
  trainingId String
  training  Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClientRequest {
  id        String   @id @default(cuid())
  studentId  String
  personalId String
  student    User     @relation("StudentRequests", fields: [studentId], references: [id], onDelete: Cascade)
  personal   User     @relation("PersonalRequests", fields: [personalId], references: [id], onDelete: Cascade)
  message   String
  status    String   @default("pending") // "pending", "accepted", "rejected"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, personalId])
}

model PersonalStudent {
  id         String   @id @default(cuid())
  studentId  String
  personalId String
  createdAt  DateTime @default(now())

  student  User @relation("StudentToPersonals", fields: [studentId], references: [id], onDelete: Cascade)
  personal User @relation("PersonalToStudents", fields: [personalId], references: [id], onDelete: Cascade)

  @@unique([studentId, personalId])
}

